<body>
    <main class="wrap">
        <section class="card" aria-labelledby="login-heading">
            <h1 id="login-heading">Sign in to your account</h1>
            <p class="lead">Enter your credentials to continue.</p>

            <form id="loginForm" novalidate>
                <div>
                    <label for="username">Username or email</label>
                    <input id="username" name="username" type="text" autocomplete="username" required />
                </div>

                <div>
                    <label for="password">Password</label>
                    <input id="password" name="password" type="password" autocomplete="current-password" required minlength="6" />
                </div>

                <div class="row">
                    <label class="checkbox"><input id="remember" name="remember" type="checkbox" /> Remember me</label>
                    <a href="#" style="color:var(--accent);text-decoration:none;font-size:0.9rem">Forgot?</a>
                </div>

                <button type="submit">Sign in</button>
                <div id="message" role="status" aria-live="polite" class="help"></div>
            </form>
        </section>
    </main>

    <script>
        (function(){
            const form = document.getElementById('loginForm');
            const msg = document.getElementById('message');

            form.addEventListener('submit', function(e){
                e.preventDefault();
                msg.textContent = '';
                const u = form.username.value.trim();
                const p = form.password.value;

                if (!u || !p) {
                    msg.textContent = 'Please enter username and password.';
                    msg.className = 'help error';
                    return;
                }
                if (p.length < 6) {
                    msg.textContent = 'Password must be at least 6 characters.';
                    msg.className = 'help error';
                    return;
                }

                // Placeholder for real auth: replace with fetch() to your server.
                msg.textContent = 'Signing inâ€¦';
                msg.className = 'help';

                // Simulate async login
                setTimeout(() => {
                    msg.textContent = 'Signed in successfully (demo).';
                    msg.className = 'help';
                }, 800);
            });
        })();
    </script>
